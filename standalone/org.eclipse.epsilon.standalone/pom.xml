<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.eclipse.epsilon</groupId>
		<artifactId>standalone</artifactId>
		<version>2.0.0-SNAPSHOT</version>
	</parent>
	<artifactId>org.eclipse.epsilon.standalone</artifactId>
	<packaging>eclipse-plugin</packaging>

	<properties>
		<ver-no-snapshot>2.0.0</ver-no-snapshot>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.eclipse.epsilon</groupId>
			<artifactId>plugins</artifactId>
			<version>${project.version}</version>
			<type>pom</type>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<!-- Needed for the kitchensink JAR file -->
			<plugin>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>3.1.2</version>
				<executions>
					<execution>
						<id>copy</id>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
					</execution>
					<execution>
						<id>unpack</id>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<includeArtifactIds><!-- Match MANIFEST.MF -->
								org.antlr.runtime,
								org.apache.ant,
								org.apache.commons.cli,
								org.apache.commons.collections,
								org.apache.commons.lang3,
								org.apache.commons.csv,
								org.apache.poi_3.10.1,
								org.apache.poi.ooxml_3.10.1,
								org.apache.poi.ooxml.schemas_3.10.1,
								org.apache.xmlbeans,
								org.eclipse.core.runtime,
								org.eclipse.emf.codegen,
								org.eclipse.emf.codegen.ecore,
								org.eclipse.emf.codegen.ecore.xtext,
								org.eclipse.emf.common,
								org.eclipse.emf.ecore,
								org.eclipse.emf.ecore.xmi,
								org.eclipse.emf.mapping.ecore2xml,
								org.eclipse.emf.mwe2.runtime,
								org.eclipse.uml2.common,
								org.eclipse.uml2.types,
								org.eclipse.uml2.uml,
								org.eclipse.xsd,
								org.eclipse.xtext,
								org.eclipse.xtext.xbase,
								org.slf4j.api
							</includeArtifactIds>
							<outputDirectory>target/dependency-unpacked</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- Note: this requires that everything else has been built already -->
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>3.2.0</version>
				<executions>
					<execution>
						<id>generate-jars</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<finalName>epsilon-${ver-no-snapshot}</finalName>
							<descriptors>
								<descriptor>assembly/core.xml</descriptor>
								<descriptor>assembly/core-src.xml</descriptor>
								<descriptor>assembly/core-sources.xml</descriptor>
								<descriptor>assembly/core-deps.xml</descriptor>
								<descriptor>assembly/emf.xml</descriptor>
								<descriptor>assembly/emf-src.xml</descriptor>
								<descriptor>assembly/emf-sources.xml</descriptor>
								<descriptor>assembly/emf-deps.xml</descriptor>
								<descriptor>assembly/uml.xml</descriptor>
								<descriptor>assembly/uml-src.xml</descriptor>
								<descriptor>assembly/uml-sources.xml</descriptor>
								<descriptor>assembly/uml-deps.xml</descriptor>
								<descriptor>assembly/graphml.xml</descriptor>
								<descriptor>assembly/graphml-src.xml</descriptor>
								<descriptor>assembly/graphml-sources.xml</descriptor>
								<descriptor>assembly/simulink.xml</descriptor>
								<descriptor>assembly/simulink-src.xml</descriptor>
								<descriptor>assembly/simulink-sources.xml</descriptor>
								<descriptor>assembly/simulink-deps.xml</descriptor>
								<descriptor>assembly/hutn.xml</descriptor>
								<descriptor>assembly/hutn-src.xml</descriptor>
								<descriptor>assembly/hutn-sources.xml</descriptor>
								<descriptor>assembly/spreadsheets-deps.xml</descriptor>
								<descriptor>assembly/spreadsheets-sources.xml</descriptor>
								<descriptor>assembly/spreadsheets-src.xml</descriptor>
								<descriptor>assembly/spreadsheets.xml</descriptor>
								<descriptor>assembly/workflow.xml</descriptor>
								<descriptor>assembly/workflow-src.xml</descriptor>
								<descriptor>assembly/workflow-sources.xml</descriptor>
								<descriptor>assembly/workflow-emf.xml</descriptor>
								<descriptor>assembly/workflow-emf-src.xml</descriptor>
								<descriptor>assembly/workflow-emf-sources.xml</descriptor>
								<descriptor>assembly/cli.xml</descriptor>
								<descriptor>assembly/cli-src.xml</descriptor>
								<descriptor>assembly/cli-sources.xml</descriptor>
								<descriptor>assembly/cli-deps.xml</descriptor>
								<descriptor>assembly/kitchensink.xml</descriptor>
							</descriptors>
							<archive>
								<manifest>
									<mainClass>org.eclipse.epsilon.eol.cli.EolConfigParser</mainClass>
								</manifest>
							</archive>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.codehaus.gmavenplus</groupId>
				<artifactId>gmavenplus-plugin</artifactId>
				<version>1.9.0</version>
				<dependencies>
					<dependency>
						<groupId>org.codehaus.groovy</groupId>
						<artifactId>groovy-all</artifactId>
						<version>3.0.3</version>
						<scope>runtime</scope>
					</dependency>
					<dependency>
						<groupId>org.twdata.maven</groupId>
						<artifactId>mojo-executor</artifactId>
						<version>2.3.1</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
	</build>
</project>
